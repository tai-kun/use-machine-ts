{
  "name": "use-machine-ts",
  "version": "0.0.0",
  "license": "MIT",
  "description": "The tiny state machine hook for React",
  "sideEffects": false,
  "repository": "git+https://github.com/tai-kun/use-machine-ts.git",
  "author": {
    "name": "tai-kun",
    "url": "https://github.com/tai-kun/"
  },
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./standard": {
      "types": "./dist/useMachine.d.ts",
      "import": "./dist/useMachine.mjs",
      "require": "./dist/useMachine.cjs"
    },
    "./shared": {
      "types": "./dist/useSharedMachine.d.ts",
      "import": "./dist/useSharedMachine.mjs",
      "require": "./dist/useSharedMachine.cjs"
    },
    "./synced": {
      "types": "./dist/useSyncedMachine.d.ts",
      "import": "./dist/useSyncedMachine.mjs",
      "require": "./dist/useSyncedMachine.cjs"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "~11.0.3",
    "@swc-node/register": "~1.9.0",
    "@testing-library/react": "~14.2.1",
    "@tsconfig/node21": "~21.0.1",
    "@tsconfig/strictest": "~2.0.3",
    "@types/node": "~20.11.26",
    "@types/react": "^18.2.65",
    "cfg-test": "~0.5.0",
    "dprint": "~0.45.0",
    "esbuild": "~0.20.1",
    "global-jsdom": "~24.0.0",
    "jsdom": "~24.0.0",
    "plop": "~4.0.1",
    "react": "^18.2.0",
    "size-limit": "~11.0.3",
    "tsd": "~0.30.7",
    "typescript": "~5.4.2"
  },
  "scripts": {
    "add": "plop --plopfile config/code/plopfile.mjs",
    "tsc": "tsc --noEmit && tsd -f '@types/**/*.d.ts' -f 'src/**/*.{ts,tsx}'",
    "fmt": "dprint fmt",
    "lint": "exit 0",
    "test": "node --enable-source-maps --import cfg-test --test 'src/**/*.ts' --test 'src/**/*.tsx'",
    "build": "scripts/build.sh",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": ".temp/dist/index.production.min.mjs",
      "gzip": true
    },
    {
      "path": ".temp/dist/use-machine.production.min.mjs",
      "gzip": true
    },
    {
      "path": ".temp/dist/use-shared-machine.production.min.mjs",
      "gzip": true
    },
    {
      "path": ".temp/dist/use-synced-machine.production.min.mjs",
      "gzip": true
    }
  ],
  "volta": {
    "node": "21.7.1"
  },
  "keywords": [
    "state-machine",
    "typescript",
    "react",
    "hooks"
  ]
}
