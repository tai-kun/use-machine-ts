{
  "extends": [
    "./node_modules/@tsconfig/node22/tsconfig.json",
    "./node_modules/@tsconfig/strictest/tsconfig.json"
  ],
  "include": [
    "./.config/**/*",
    "./src/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "erasableSyntaxOnly": true
  }
}
